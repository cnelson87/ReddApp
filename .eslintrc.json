{
	"root": true,
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"requireConfigFile": false,
		"babelOptions": {
			"presets": ["@babel/preset-react"]
		},
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"rules": {
		"no-unused-vars": ["error", { "args": "none" }],
		"curly": ["error", "all"],
		"semi": ["error", "always"]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"globals": {
		"React": "writable",
		"Twitch": true,
		"YT": true
	}
}
